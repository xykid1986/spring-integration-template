<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:int-amqp="http://www.springframework.org/schema/integration/amqp"
	xmlns:int-stream="http://www.springframework.org/schema/integration/stream"
	xsi:schemaLocation="http://www.springframework.org/schema/integration/amqp http://www.springframework.org/schema/integration/amqp/spring-integration-amqp.xsd
		http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/integration/stream http://www.springframework.org/schema/integration/stream/spring-integration-stream.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<import resource="amqp-rabbitmq-context.xml" />

	<!-- the message-converter must be the same as the one used in amqpTemplate -->
	<int-amqp:inbound-gateway request-channel="fromRabbit" concurrent-consumers="5"
		reply-channel="inboundReply" queue-names="myQueue" connection-factory="connectionFactory" message-converter="jsonConverter"/>

	<int:service-activator input-channel="fromRabbit" 
		ref="upperCaseService" method="toUpperCase" />

	<bean id="upperCaseService" class="com.xiao.service.UpperCaseServiceImpl" />

	<int:channel id="outboundReply">
		<int:queue capacity="20" />
	</int:channel>

	<int:channel id="toRabbit" />

	<int:channel id="fromRabbit" />
	
	<int:channel id="inboundReply">
		<int:queue capacity="20" />
	</int:channel>

</beans>